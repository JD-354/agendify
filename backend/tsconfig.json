{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "commonjs",  
    "rootDir": "./src",
    "outDir": "./dist",                              
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "esModuleInterop": true,    
    "typeRoots": ["./node_modules/@types"]                             
},
"include": ["src/**/*"],
"exclude": ["node_modules","dist"]

}